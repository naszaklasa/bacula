       ],   
       [ AC_CHECK_LIB(ncurses, tgetent,
	 [ CONS_LIBS="-lncurses"
	   CONS_OBJ="conio.o"
	   CONS_SRC="conio.c"
	   got_conio="yes"
	   support_readline=no
	   AC_DEFINE(HAVE_CONIO, 1, [Set if Bacula conio support enabled]) 
	 ])
       ])
     ],
     [
	 AC_CHECK_HEADERS(curses.h)
	 AC_CHECK_HEADER(term.h,
	       [ AC_CHECK_LIB(curses, tgetent, 
		 [ CONS_LIBS="-lcurses"
		   CONS_OBJ="conio.o"
		   CONS_SRC="conio.c"
		   got_conio="yes"
		   support_readline=no
		   AC_DEFINE(HAVE_CONIO, 1, [Set if Bacula conio support enabled]) 
