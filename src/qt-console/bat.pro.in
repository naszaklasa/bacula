## Job Step Graphs
HEADERS += jobgraphs/jobplot.h
SOURCES += jobgraphs/jobplot.cpp

# Help dialog
HEADERS += help/help.h
SOURCES += help/help.cpp

INSTALLS += bins
INSTALLS += confs

QMAKE_EXTRA_TARGETS += depend
